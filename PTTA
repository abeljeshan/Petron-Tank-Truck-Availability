<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tank Truck Availability</title>
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
        import { getDatabase, ref, push, onChildAdded, child, remove, update } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-database.js";

        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_AUTH_DOMAIN",
            databaseURL: "https://YOUR_PROJECT_ID.firebaseio.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_STORAGE_BUCKET",
            messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
            appId: "YOUR_APP_ID"
        };
        
        const app = initializeApp(firebaseConfig);
        const db = getDatabase(app);
        const trucksRef = ref(db, "trucks");
        
        window.addTruck = function() {
            let truckNumber = document.getElementById("truckNumber").value;
            let status = document.getElementById("status").value;
            let eta = document.getElementById("eta").value;
            let area = document.getElementById("area").value;
            
            if (!truckNumber) {
                alert("Please enter a truck number.");
                return;
            }
            
            push(trucksRef, {
                truckNumber: truckNumber,
                status: status,
                eta: eta,
                area: area
            });
        }
        
        onChildAdded(trucksRef, (snapshot) => {
            let data = snapshot.val();
            let table = document.getElementById(`truckList-${data.area}`);
            let row = table.insertRow();
            row.setAttribute("data-id", snapshot.key);
            row.insertCell(0).innerText = data.truckNumber;
            row.insertCell(1).innerHTML = `<select onchange="updateStatus('${snapshot.key}', this)"><option value="Available">Available</option><option value="In Transit">In Transit</option><option value="Under Maintenance">Under Maintenance</option></select>`;
            row.insertCell(2).innerHTML = `<input type="text" value="${data.eta}" onchange="updateETA('${snapshot.key}', this)">`;
            let actions = row.insertCell(3);
            actions.innerHTML = '<button onclick="removeTruck(\'' + snapshot.key + '\')">Remove</button>';
        });

        window.removeTruck = function(id) {
            remove(child(trucksRef, id));
            document.querySelector(`[data-id='${id}']`).remove();
        }

        window.updateStatus = function(id, select) {
            update(child(trucksRef, id), { status: select.value });
        }

        window.updateETA = function(id, input) {
            update(child(trucksRef, id), { eta: input.value });
        }
    </script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
            color: #002f87;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #002f87;
            color: white;
        }
        button {
            background-color: #d32f2f;
            color: white;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 5px;
        }
        button:hover {
            background-color: #b71c1c;
        }
        input, select {
            margin: 5px 0;
            padding: 8px;
            width: calc(100% - 20px);
            display: block;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Tank Truck Availability</h2>
        <label for="area">Planning Area:</label>
        <select id="area">
            <option value="Zamboanga">Zamboanga</option>
            <option value="Jimenez">Jimenez</option>
            <option value="Davao">Davao</option>
            <option value="Bawing">Bawing</option>
        </select>
        <label for="truckNumber">Truck Number:</label>
        <input type="text" id="truckNumber" placeholder="Enter truck number">
        <label for="status">Status:</label>
        <select id="status">
            <option value="Available">Available</option>
            <option value="In Transit">In Transit</option>
            <option value="Under Maintenance">Under Maintenance</option>
        </select>
        <label for="eta">ETA (if applicable):</label>
        <input type="text" id="eta" placeholder="Enter ETA">
        <button onclick="addTruck()">Add Truck</button>
    </div>
    
    <h3>Zamboanga</h3>
    <table><thead><tr><th>Truck Number</th><th>Status</th><th>ETA</th><th>Actions</th></tr></thead><tbody id="truckList-Zamboanga"></tbody></table>
    
    <h3>Jimenez</h3>
    <table><thead><tr><th>Truck Number</th><th>Status</th><th>ETA</th><th>Actions</th></tr></thead><tbody id="truckList-Jimenez"></tbody></table>
    
    <h3>Davao</h3>
    <table><thead><tr><th>Truck Number</th><th>Status</th><th>ETA</th><th>Actions</th></tr></thead><tbody id="truckList-Davao"></tbody></table>
    
    <h3>Bawing</h3>
    <table><thead><tr><th>Truck Number</th><th>Status</th><th>ETA</th><th>Actions</th></tr></thead><tbody id="truckList-Bawing"></tbody></table>
